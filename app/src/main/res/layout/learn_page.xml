<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnPage">


    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/shape"/>


    <!-- Title for the learn page -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increase your knowledge and learn more about computer science "
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="20dp"
        android:textAlignment="center"/>


    <!-- Button to take user to the five different module pages available for the user to access -->

    <Button
        android:id="@+id/unit1Button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="170dp"
        android:text="Software Project Management"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_rectangle_1"/>

    <Button
        android:id="@+id/unit2Button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/unit1Button"
        android:text="Human Computer Interaction"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_rectangle_1"/>

    <Button
        android:id="@+id/unit3Button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/unit2Button"
        android:text="Information Security"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_rectangle_1"/>

    <Button
        android:id="@+id/unit4Button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/unit3Button"
        android:text="Mobile Design and Development"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_rectangle_1"/>

    <Button
        android:id="@+id/unit5Button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/unit4Button"
        android:text="Introduction to Artificial Intelligence"
        android:lineSpacingExtra="5dp"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_rectangle_1"/>

</RelativeLayout>